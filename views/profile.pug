extends layout

block content
  .profile-header
    img(src=user.displayImage)

  main.main-content
    .profile-intro
      .profile-intro__left
        h1= user.name
        small= user.job

      .profile-intro__right
        if myProfile
          a(href="#"): img(src="/images/icons/heart.svg" alt="like")
          a(href="#icebreaker"): img(src="/images/icons/chat.svg" alt="comment" class="icebreaker__open")
          a(href="#"): img(src="/images/icons/match-meter.svg" alt="match score")

    .profile-meta
      .profile-meta__item
        h3 22 
          small Age

      .profile-meta__item
        h3 HBO 
          small Education

      .profile-meta__item
        h3 18km 
          small Distance                

    .profile-about
      h2 About me
      p= user.intro

      form(action="/update" method="post")

    .profile-gallery
      each img in user.galleryImages
        img(src=img)

    article(class="icebreaker" id="icebreaker")
      progress(value="16.6" max="100")

      .icebreaker__inner
        h2 Ice-breaker
        p.ice-sub Which one do you prefer
        
        form(action="/icebreaker" method="post")
          .icebreaker-option or

          fieldset(class="active")
            legend Choose one
            
            label(for="party")
              input(type="radio", name="q1", value="party" id="party" class="ice-q")
              img(src="/images/icebreaker/party.jpg" alt="party")

            label(for="camping")
              input(type="radio", name="q1", value="camping", id="camping" class="ice-q")
              img(src="/images/icebreaker/camping.jpg" alt="camping")

          fieldset
            legend Choose one
            label(for="yoga")
              input(type="radio", name="q2", value="yoga", id="yoga" class="ice-q")
              img(src="/images/icebreaker/yoga.jpg" alt="yoga")

            label(for="gym")
              input(type="radio", name="q2", value="gym" id="gym" class="ice-q")
              img(src="/images/icebreaker/gym.jpg" alt="gym")

          fieldset
            legend Choose one
            label(for="winter")
              input(type="radio", name="q3", value="winter", id="winter" class="ice-q")
              img(src="/images/icebreaker/winter.jpg" alt="winter")

            label(for="desert")
              input(type="radio", name="q3", value="desert" id="desert" class="ice-q")
              img(src="/images/icebreaker/desert.jpg" alt="desert")
              
          fieldset
            legend Choose one
            label(for="city")
              input(type="radio", name="q4", value="city", id="city" class="ice-q")
              img(src="/images/icebreaker/city.jpg" alt="city")

            label(for="trees")
              input(type="radio", name="q4", value="trees" id="trees" class="ice-q")
              img(src="/images/icebreaker/flower-trees.jpg" alt="trees")

          fieldset
            legend Choose one
            label(for="cake")
              input(type="radio", name="q5", value="cake", id="cake" class="ice-q")
              img(src="/images/icebreaker/cake.jpg" alt="cake")

            label(for="egg")
              input(type="radio", name="q5", value="egg" id="egg" class="ice-q")
              img(src="/images/icebreaker/egg.jpg" alt="egg")

          fieldset
            p.feedback Je hebt alle vragen beantwoord. Jouw ijsbreker zal worden verstuurd naar 
              a(href="#") Amelia Cabal
            input(type="submit" value="Verstuur ice-breaker")

        button(class="icebreaker__back icebreaker__close") Ga terug