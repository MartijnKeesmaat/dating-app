extends layout

block content
  h1= users[id-1].name

  .icebreaker
    .icebreaker__inner
      h4 Maak kennis
      h2 Ice-breaker
      
      form(method="post" action="/")
        fieldset
          legend Activity
          input(type="radio", name="serie1", value="home", id="home")
          label(for="home") Stay home
          input(type="radio", name="serie1", value="camping" id="camping")
          label(for="camping") Camping
        
        fieldset
          legend Activity
          input(type="radio", name="serie2", value="workout", id="workout")
          label(for="workout") Work out
          input(type="radio", name="serie2", value="movie" id="movie")
          label(for="movie") Watch a movie

        fieldset
          legend Pet
          input(type="radio", name="serie3", value="cat", id="cat")
          label(for="cat") Cat
          input(type="radio", name="serie3", value="dog" id="dog")
          label(for="dog") Dog

        <input type="submit" value="Submit">

      button Ga terug