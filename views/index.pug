extends layout

block content

  .overview
    h2 Vind partners
    h1 Zoeken

    .users
      each user in users
        article.user
          a(href='/users/' + user._id)
            img(class="user__display" src=user.displayImage)
          
          .user__info
            .user__desc
              h3= user.name
              p= user.job

            .user__actions
              img(src="/images/icons/heart.svg" alt="like")
              img(src="/images/icons/chat.svg" alt="comment")
              img(src="/images/icons/match-meter.svg" alt="match score")